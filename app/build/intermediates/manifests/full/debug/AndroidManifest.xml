<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sfeng.tetris"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="23" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sfeng.tetris.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sfeng.tetris.DisplayChatActivity"
            android:label="@string/title_chat"
            android:parentActivityName="com.sfeng.tetris.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sfeng.tetris.MainActivity" />
        </activity>
        <activity
            android:name="com.sfeng.tetris.Tetris"
            android:label="@string/title_activity_tetris"
            android:parentActivityName="com.sfeng.tetris.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.sfeng.tetris.MainActivity" />
        </activity>
    </application>

</manifest>